def calculate_covariance(x, y):
    """
    x - observations from variable x

    y - observations from variable y
    """
    n = len(x)
    mean_x = np.mean(x)
    mean_y = np.mean(y)
    
    covariance = np.sum((x - mean_x) * (y - mean_y)) / (n - 1)
    return covariance


print(calculate_covariance(titanic['age'], titanic['fare']))









